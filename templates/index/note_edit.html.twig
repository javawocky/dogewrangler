</head>
<body>

<div style="width: 60%">
<form action="/note/save" method="post">
    <input type="hidden" name="noteId" value="{{ notes.id }}">
    <input type="hidden" name="jobId" value="{{ notes.jobId }}">
    <div class="form-group">
        <label for="noteText">Note Text</label>
        <textarea name="noteText" class="form-control"  placeholder="Type your note">{{ notes.text }}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <button type="button" class="btn" onclick="window.location='/notes/{{ jobId }}'">Cancel</button>
</form>
</div>
</body>
</html>