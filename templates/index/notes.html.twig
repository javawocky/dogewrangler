<body></body>
<a href="/">< back</a>
<h1>Job Details</h1>
<div>JobID: {{ job.id }}</div>
<div>Client Name: {{ job.clientName }}</div>
<div>Contact Number: {{ job.contactNumber }}</div>
<div>Status: {{ job.status }}</div>
<div>Created: {{ job.created|date('Y-m-d') }}</div>

<br>
<h2>Notes</h2>
<form action = "/note/new/{{ job.id }}" method="post">
    <textarea name="text" placeholder="Enter note text..."></textarea>
    <br>
    <button type="submit">Add Note</button>
</form>
<table>
    <tr>
        <th>Note ID</th>
        <th>Text</th>
        <th>created</th>
    </tr>
    {% for note in notes %}
        <tr><td>{{ note.id }}</td>
            <td><label>
                    <textarea>{{ note.text }}</textarea>
                </label>
            </td>
            <td>{{ note.created|date('Y-m-d') }}</td>
        </tr>
    {% endfor %}

</table>
</html>